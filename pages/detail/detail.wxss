.main{
    padding: 10rpx;
    color: #666;
}
.video_info{

    margin-top: 10rpx;
}
.video_info video{
 width: 100%;
}
.video_title{

    display: flex;
    justify-content: space-between;
    font-size: 25rpx;
}
.video_detail{
    margin-top: 5rpx;
    font-size: 28rpx;
}
.video_detail text{
    margin-left: 15rpx;
}
.video_detail .author{
color: #000;
}
.other_list{
    margin-top: 10rpx;
}
.item_other{
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;

}
.other_img_wrap{
    width: 38%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.other_img_wrap image{
    width: 90%;
    border-radius: 15rpx;
}
.other_info{
    width: 60%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.other_title{
    font-size: 30rpx;
    color: #e06f93;
}
.other_detail{
    font-size: 26rpx;
    color: #666;
    display: flex;
    flex-wrap: nowrap;
}
.other_detail .play_count{
    margin-right: 20rpx;
}
.comment_wrap{
    margin-top: 10rpx;
}
.comment_title{
    padding: 10rpx;
    font-size: 28rpx;
}
.comment_list{
}
.comment_item{
    margin-bottom: 10rpx;
    padding: 10rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: #666 solid 1px;
}
.comment_user{
    flex: 1;
    display: flex;
    justify-content: center;

}
.comment_user image{
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;

}
.comment_info{
    flex: 5;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    

}
.comment_detail{
    display: flex;
    justify-content: space-between;

}
.comment_detail .author{
    font-size: 28rpx;
    color: black;
}
.comment_detail .date{
    color: #666;
    font-size: 24rpx;
}
.comment_content{
    font-size: 28rpx;
    color: black;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
